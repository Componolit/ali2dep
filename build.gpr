project Build
is
   for Create_Missing_Dirs use "True";
   for Source_Dirs use ("src", "contrib", "obj/generated");
   for Object_Dir use "obj";
   for Main use ("main.adb");
   for Languages use ("Ada", "C");

   package Builder is
      for Executable ("main.adb") use "ali2dep";
   end Builder;
end Build;
